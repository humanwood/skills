{
  "type": "object",
  "required": [
    "task_type",
    "summary",
    "recommendations",
    "risks"
  ],
  "properties": {
    "task_type": {
      "type": "string",
      "enum": [
        "learning_plan",
        "conversion_audit",
        "behavior_analysis"
      ]
    },
    "summary": {
      "type": "string"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "rationale",
          "priority"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "rationale": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": [
              "high",
              "medium",
              "low"
            ]
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
