{
  "calendar": {
    "primary_email": "you@example.com",
    "calendars": ["primary"],
    "event_filters": {
      "min_duration_minutes": 15,
      "require_external_attendees": true,
      "exclude_keywords": ["1:1", "focus time", "lunch", "break", "personal"],
      "include_keywords": ["client", "pitch", "intro", "partnership", "investor"]
    },
    "lookahead_hours": 48,
    "advance_prep_hours": 3
  },
  "research": {
    "depth": "standard",
    "sources": {
      "linkedin": true,
      "company_website": true,
      "news_search": true,
      "mutual_connections": false
    },
    "focus_areas": [
      "recent_activity",
      "background",
      "company_news",
      "shared_interests"
    ],
    "max_results_per_person": 5,
    "news_recency_days": 30
  },
  "output": {
    "format": "markdown",
    "delivery_channel": "telegram",
    "auto_send": false,
    "storage_location": "~/.config/meeting-prep/briefs",
    "filename_template": "{date}-{meeting_slug}.md",
    "include_sources": true
  },
  "auto_prep": {
    "enabled": true,
    "criteria": {
      "min_attendees": 2,
      "max_attendees": 10,
      "external_only": true,
      "skip_recurring_known": true
    },
    "skip_events_with": ["#noprep", "[internal]"],
    "prep_window_start_hours": 24,
    "prep_window_end_hours": 2
  },
  "icebreakers": {
    "tone": "professional-warm",
    "topic_priorities": [
      "recent_activity",
      "mutual_connections",
      "shared_background",
      "company_news",
      "industry_trends"
    ],
    "max_per_person": 3,
    "include_questions": true,
    "avoid_topics": ["politics", "religion", "overly_personal"]
  },
  "brief_sections": {
    "meeting_overview": true,
    "attendee_profiles": true,
    "company_context": true,
    "icebreakers": true,
    "talking_points": true,
    "prep_checklist": true,
    "sources_footer": true
  },
  "privacy": {
    "log_searches": false,
    "expire_briefs_days": 90,
    "redact_sensitive_info": true
  }
}
