{
  "name": "video_analyzer",
  "version": "2.0.0",
  "updated_date": "2026-02-13",
  "description": "智能分析 Bilibili/YouTube/本地视频，生成转写、评估和总结。支持关键帧截图自动嵌入。",
  "author": "user",
  "updated_by": "Claude Code (Sonnet 4.5)",

  "features": {
    "video_transcription": true,
    "content_evaluation": true,
    "content_summary": true,
    "screenshot_extraction": true,
    "bilibili_support": true,
    "youtube_support": true,
    "local_file_support": true,
    "multi_model_support": true
  },

  "changes": {
    "v2.0.0": {
      "date": "2026-02-13",
      "changes": [
        "默认启用关键帧截图功能",
        "智能选择关键节点并自动嵌入截图",
        "更新配置文件支持多种 LLM 模型",
        "优化命令行参数处理",
        "更新文档和示例代码"
      ]
    }
  },

  "configuration": {
    "llm_provider": "openai",
    "llm_model": "gpt-4o-mini",
    "base_url": "https://api.openai.com/v1",
    "default_whisper_model": "large-v2",
    "enable_screenshots": true
  },

  "dependencies": {
    "python": ">=3.8",
    "ffmpeg": "required",
    "yt-dlp": ">=2024.0.0",
    "faster-whisper": ">=1.0.0",
    "openai": ">=1.0.0",
    "anthropic": ">=0.18.0"
  },

  "usage": {
    "basic": "python run.py --url <VIDEO_URL>",
    "with_small_model": "python run.py --url <VIDEO_URL> --whisper-model small",
    "disable_screenshots": "python run.py --url <VIDEO_URL> --no-screenshots"
  }
}
